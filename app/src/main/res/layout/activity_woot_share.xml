<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/billingscreen"
    tools:context="com.woot.company.woot.WootShareActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Woot Share"
        android:fontFamily="sans-serif-smallcaps"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#00bcd4"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:id="@+id/textView24"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose location"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView25"
        android:layout_below="@+id/textView24"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Origin: "
        android:textColor="#4caf50"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView26"
        android:layout_below="@+id/textView25"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Destination:"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView27"
        android:textColor="#c62828"
        android:layout_below="@+id/from"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dateslot:      "
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView28"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/to"
        android:textColor="#3f51b5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Timeslot:"
        android:textColor="#3f51b5"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView29"
        android:layout_below="@+id/dateslot"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/from"
        android:background="@drawable/greendrop"
        android:layout_alignTop="@+id/textView26"
        android:layout_toEndOf="@+id/textView28" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/to"
        android:background="@drawable/reddrop"
        android:spinnerMode="dialog"
        android:layout_below="@+id/from"
        android:layout_alignStart="@+id/from"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/dateslot"
        android:spinnerMode="dialog"
        android:background="@drawable/bluedrop"
        android:layout_alignTop="@+id/textView28"
        android:layout_alignStart="@+id/to" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/timeslot"
        android:spinnerMode="dialog"
        android:background="@drawable/bluedrop"
        android:popupBackground="#ffffff"
        android:layout_alignTop="@+id/textView29"
        android:layout_alignStart="@+id/to" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fare"
        android:textColor="#ff0000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/price"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:textAllCaps="false"
        android:id="@+id/button4"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fare is: "
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/textView32"
        android:layout_above="@+id/price"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
